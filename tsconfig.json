{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "pretty": true,
    "baseUrl": ".",
    "types": [
      "./tests",
      "webpack",
      "webpack-env",
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts", "src/helpers/exifOrientation.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
